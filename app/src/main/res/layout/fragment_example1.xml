<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewRaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Row -"
        app:layout_constraintStart_toStartOf="@+id/textViewColumn"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textViewColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="Column - "
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2" />


    <EditText
        android:id="@+id/editTextRaw"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:hint="raw count"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:imeOptions="actionDone"
        app:layout_constraintEnd_toEndOf="@+id/editTextColumn"
        app:layout_constraintStart_toStartOf="@+id/editTextColumn"
        app:layout_constraintTop_toTopOf="@+id/textViewRaw"
        tools:text="30.2" />

    <EditText
        android:id="@+id/editTextColumn"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorPrimary"
        android:hint="column count"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:imeOptions="actionDone"
        app:layout_constraintBottom_toBottomOf="@+id/textViewColumn"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        tools:text="30.2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="223dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_border" />

</android.support.constraint.ConstraintLayout>